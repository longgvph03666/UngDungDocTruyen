<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/mangaMenuCover"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dip"
                android:contentDescription="@string/desc"
                android:src="@drawable/avatar_icon" />

            <TextView
                android:id="@+id/info0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mangaMenuCover"
                android:layout_marginTop="20dip"
                android:text="@string/manga_name"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/infoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/info0"
                android:text="tên truyện" />

            <TextView
                android:id="@+id/info1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/infoName"
                android:layout_marginTop="15dip"
                android:text="@string/manga_author"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="19sp"  />

            <TextView
                android:id="@+id/infoArthur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/info1"
                android:text="tác giả" />

            <TextView
                android:id="@+id/info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/infoArthur"
                android:layout_marginTop="15dip"
                android:text="@string/manga_genre"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="19sp"  />

            <TextView
                android:id="@+id/infoGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/info2"
                android:text="Thể loại" />

            <TextView
                android:id="@+id/info3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/infoGenre"
                android:layout_marginTop="15dip"
                android:text="@string/manga_summary"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="19sp"  />

            <TextView
                android:id="@+id/infoSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/info3"
                android:singleLine="false"
                android:text="summary" />

            <Button
                android:id="@+id/infoButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/infoSummary"
                android:text="@string/add_manga"
                android:background="@drawable/bg_gradient_button1"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp" />
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapters"
                android:textSize="23sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/violet"
                />

            <ListView
                android:id="@+id/listChap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/infoButton" />
"
        </LinearLayout>
    </ScrollView>

</LinearLayout>